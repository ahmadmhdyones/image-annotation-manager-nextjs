{
  "printWidth": 120,
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "es5",
  "endOfLine": "lf",

  "singleQuote": true,
  "jsxSingleQuote": true,
  "quoteProps": "consistent",

  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "preserve",

  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "vueIndentScriptAndStyle": true,

  "overrides": [
    {
      "files": "*.md",
      "options": { "tabWidth": 4 }
    },
    {
      "files": ["*.html", "*.css", "*.scss", "*.sass"],
      "options": { "singleQuote": false }
    },
    {
      "files": [".eslintrc", ".eslintrc.*", ".prettierrc", ".prettierrc.*"],
      "options": { "parser": "json" }
    }
  ]
}
